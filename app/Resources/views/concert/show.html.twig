{% extends 'base.html.twig' %}

{% block body %}
    <h1>Concert</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ concert.id }}</td>
            </tr>
            <tr>
                <th>Memberid</th>
                <td>{{ concert.memberId }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ concert.city }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ concert.description }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ concert.url }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{% if concert.datetime %}{{ concert.datetime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if concert.createdAt %}{{ concert.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if concert.updatedAt %}{{ concert.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('concert_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('concert_edit', { 'id': concert.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
