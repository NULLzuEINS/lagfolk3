{% extends 'base.html.twig' %}

{% block body %}
    <h1>Genre</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
            <tr>
                <th>Nameurl</th>
                <td>{{ genre.nameUrl }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ genre.icon }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if genre.createdAt %}{{ genre.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if genre.updatedAt %}{{ genre.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('genre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('genre_edit', { 'id': genre.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
