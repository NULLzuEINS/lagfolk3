{% extends 'base.html.twig' %}

{% block body %}
    <h1>Folkpost</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ folkpost.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ folkpost.image }}</td>
            </tr>
            <tr>
                <th>Pdf</th>
                <td>{{ folkpost.pdf }}</td>
            </tr>
            <tr>
                <th>Releaseat</th>
                <td>{% if folkpost.releaseAt %}{{ folkpost.releaseAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if folkpost.createdAt %}{{ folkpost.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if folkpost.updatedAt %}{{ folkpost.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('folkpost_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('folkpost_edit', { 'id': folkpost.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
